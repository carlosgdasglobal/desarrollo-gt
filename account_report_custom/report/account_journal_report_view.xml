    <template id="account_journal_internal_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <div class="header">
            <div class="row">
                <div class="col-1"/>
                <div class="col-10 mb4 text-center">
                    <h4 t-esc="company.vat" class="p-0 m-0"/>
                    <h4 t-esc="company.name" class="p-0 m-0"/>
                    <h4 class="p-0 m-0">Libro Diario</h4>
                    Periodo Contable del: <span t-esc="date_from"/> al <span t-esc="date_to"/>
                </div>
                <div class="col-1">
                    <span class="page"/>
                </div>
            </div>
        </div>

        <div class="article o_report_layout_standard"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <!--t t-call="web.address_layout"/-->
            <t t-raw="0"/>
        </div>

